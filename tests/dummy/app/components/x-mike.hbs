<div class="mike-view">
  <div {{resize-aware}}
  {{on "resized" this.didResize}}
  {{on "delayresized" this.debouncedDidResize}}
  >
    <div>
      <h4>Resize-Aware View</h4>
      <p><code>min-width: 500px</code></p>
      <ul class="resize-events">
        <li>Events</li>
        {{#each this.resizeEvents as |evt|}}
          <li class={{if evt.debounced 'debounced deep-purple white-text' ''}}>{{evt.width}}, {{evt.height}}</li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>